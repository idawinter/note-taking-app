<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Stats</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body class="stats-page">

  <button id="toggle-dark" aria-label="Toggle dark mode">ğŸŒ™</button>

  <div class="stats-clipboard">

  <div class="container">
    <h1>User Activity Stats</h1>

    <h2>Total Notes</h2>
    <p><strong><%= totalNotes %></strong></p>

    <h2>Notes by Category</h2>
    <ul>
      <% categoryCounts.forEach(cat => { %>
        <li><strong><%= cat._id || 'Uncategorized' %></strong>: <%= cat.count %></li>
      <% }) %>
    </ul>

    <h2>Recent Notes</h2>
    <ul>
      <% recentNotes.forEach(note => { %>
        <li>
          <strong><%= note.title %></strong><br>
          <small>Created at: <%= note.createdAt.toLocaleString() %></small><br>
          <a href="/notes/<%= note._id %>">View</a>
        </li>
      <% }) %>
    </ul>
<br>
    <a href="/dashboard">â¬… Back to Dashboard</a>
  </div>
  </div>

  <script>
    const toggle = document.getElementById('toggle-dark');
  
    const currentTheme = localStorage.getItem('theme');
    if (currentTheme === 'dark') {
      document.body.classList.add('dark-mode');
      toggle.textContent = 'â˜€ï¸';
    } else {
      toggle.textContent = 'ğŸŒ™';
    }
  
    toggle.addEventListener('click', () => {
      const isDark = document.body.classList.toggle('dark-mode');
      toggle.textContent = isDark ? 'â˜€ï¸' : 'ğŸŒ™';
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
    });
  </script>
  
</body>
</html>
